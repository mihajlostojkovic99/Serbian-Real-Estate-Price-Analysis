{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "outDir": "dist",
        "noUnusedLocals": false,
        "lib": ["DOM"],
        "baseUrl": ".",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
    },
    "include": [
        "./src/**/*"
    ]
}
